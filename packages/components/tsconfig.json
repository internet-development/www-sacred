{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "preserve",
    "moduleResolution": "Bundler",
    "declaration": true,
    "outDir": "./dist",
    "types": ["node", "react"],
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": "./",
    "paths": {
      "@srcl/ui/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "global.d.ts", "tsdown.config.ts"],
  "exclude": ["node_modules", "dist"]
}
